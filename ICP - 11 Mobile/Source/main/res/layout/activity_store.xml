<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/main"
    tools:context="com.example.myapplication.StoreActivity">

    <EditText
        android:id="@+id/txtData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#6E7873"
        android:hint="Please enter the data to save."
        android:textColor="#F6F0F0"
        android:textColorHint="#B3B31D" />

    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtData"
        android:layout_marginTop="10dp"
        android:background="#337554"
        android:onClick="save"
        android:text="Save Data" />

    <Button
        android:id="@+id/btnLoadData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSaveData"
        android:layout_marginTop="10dp"
        android:background="#337554"
        android:onClick="load"
        android:text="Load Data" />

    <TextView
        android:id="@+id/lblData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoadData"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFEFE" />
</RelativeLayout>