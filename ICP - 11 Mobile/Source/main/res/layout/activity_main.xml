<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.myapplication.MainActivity"
    android:background="@drawable/main">

    <Button
        android:id="@+id/btnDisplayLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#337554"
        android:onClick="getLocationDetails"
        android:text="Display Current Location" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDisplayLoc"
        android:layout_marginTop="51dp"
        android:background="#337554"
        android:onClick="takePhoto"
        android:text="Take Photo" />

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTakePhoto"
        android:layout_marginTop="56dp"
        android:background="#337554"
        android:onClick="recordVoice"
        android:text="Record" />

    <Button
        android:id="@+id/btnStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecord"
        android:layout_marginTop="53dp"
        android:background="#337554"
        android:onClick="saveData"
        android:text="Save To Storage" />

</RelativeLayout>